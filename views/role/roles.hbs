										window1.close();
									})
								}	
							}, 
							
							/* Delete action end */
							
							{template : "</center>" },
							 
							],
							title: "{{__ "Action"}}", 
							headerTemplate: "<center><b><a href='javascript:void(0)' class='enable_filter'><i class='fa fa-search light'>&nbsp;&nbsp;</i></a></b><a href='addrole'><button type='button' class='btn addnew btn-sm'><i class='fa fa-plus'></i> New</button></a></center>"
