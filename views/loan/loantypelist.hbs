								} 
							},
							{template : "&nbsp;" },
							{template : "</center>" },
							 
							], title: "Action", 
							headerTemplate: "<center><b><a href='javascript:void(0)' class='enable_filter'>&nbsp;&nbsp;</i></a></b><a href='addloantype'><button type='button' class='btn addnew btn-sm'><i class='fa fa-plus'></i> New</button></a></center>"
					}
                ],
				editable: {
                mode: "inline"
            }
            }); 
        });
