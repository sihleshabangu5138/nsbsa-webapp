 $('#loanReportsTable').DataTable({
            "paging": true
        });
        // Get all rows in the table body
        var rows = $('.table tbody  tr');

        // Loop through each row and set the index
        rows.each(function (index) {
            // Find the <th> element in the current row and set its text to the index + 1
            $(this).find('th').text(index + 1);
        });
    });
</script>