    <!-- Make your CSS full responsive -->
    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
        }

        .content-wrapper {
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh;
        }

        .box-shadow-2 {
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .card {
            border: 1px solid #ccc;
            border-radius: 5px;
            background-color: #fff;
            max-width: 400px;
            width: 100%;
            margin-bottom: 0;
        }

        .card-content {
            padding: 20px;
        }

        .card-title img {
            width: 60%;
            max-width: 100%; /* Make the image responsive */
        }

        .form-group {
            position: relative;
            margin-bottom: 20px;
        }

        .form-control {
            width: 100%;
            padding: 10px;
            font-size: 14px;
            border: 1px solid #ccc;
            border-radius: 3px;
            box-sizing: border-box;
        }

        .form-control-position {
            position: absolute;
            top: 50%;
            right: 10px;
            transform: translateY(-50%);
        }
    </style>

</head>

<body data-open="click" data-menu="horizontal-menu" data-col="2-columns" class="horizontal-layout horizontal-menu 2-columns menu-expanded">

    <div>
        <!-- Toastr JS -->
        <script src="/stylesheets/vendors/js/extensions/toastr.min.js" type="text/javascript"></script>
        <script src="/js/scripts/extensions/toastr.js" type="text/javascript"></script>
        <!-- END Toastr JS -->

        <div class="content-wrapper">
            <div class="content-body">
                <div class="box-shadow-2">
                    <div class="card">
                        <div class="card-content">
                            <div class="card-header border-0">
                                <div class="card-title text-center">
                                    <img src="/images/stokvelbody-logo.png" alt="branding logo">
                                </div>
                            </div>

                            <p class="card-subtitle line-on-side text-muted text-center font-small-3 mx-2 my-1">
                                <span>{{__ "Using Account Details"}}</span>
                            </p>
                            <div class="card-body NF_login">
                                {{#if messages.error }}
                                <script>
                                    toastr.error("{{messages.error}}", "{{__ 'Error!'}}", { "showMethod": "fadeIn", "hideMethod": "fadeOut", timeOut: 5000 });
                                </script>
                                {{/if}}
                                {{#if messages.success }}
                                <script>
                                    toastr.success("{{messages.success}}", "{{__ 'Success!'}}", { "showMethod": "fadeIn", "hideMethod": "fadeOut", timeOut: 5000 });
                                </script>
                                {{/if}}
                                <form  id="formID" class="needs-validation form form-horizontal" novalidate action="/" method="post" >
                          
                                    <div class="form-group position-relative has-icon-left">
                                        <input type="text" class="form-control" name="username" id="username"
                                            placeholder="{{__ "Your Username"}}" >
                                        <div class="form-control-position">
                                            <i class="ft-user"></i>
                                        </div>
                                    </div>
                                    <div class="form-group position-relative has-icon-left">
                                        <input type="password" class="form-control" name="password" id="user-password"
                                            placeholder="{{__ "Enter Password"}}" >
                                        <div class="form-control-position">
                                            <i class="fa fa-key"></i>
                                        </div>
                                    </div>
                                    <button type="submit"
                                        class="btn btn-outline-secondary btn-block mb-2"><i
                                            class="ft-unlock"></i> {{__ "Login"}}</button>
                                    <hr>
					  <br>
					   <table class="table passwordtable" style="background-color:#faf7f7;">
						<tr><th>Role</th><th>Username</th><th>Password</th></tr>
						<tr class="putpass" data-id="admin"><td>Admin</td><td>admin</td><td>admin</td></tr>
						<tr class="putpass" data-id="customer"><td>Customer</td><td>customer</td><td>customer123</td></tr>
						<tr class="putpass" data-id="staff"><td>Staff</td><td>staff</td><td>staff123</td></tr>
					   </table>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

